<Page x:Class="NetFx40WpfTest.View.Main.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      DataContext="{Binding Source={StaticResource Locator}, Path=MainFirst}"
      Name="ThisPage" Title="Page01">
    <Grid>
        <DataGrid ItemsSource="{Binding DataList}" Style="{StaticResource CustomDataGrid}" Margin="20"
                  HorizontalScrollBarVisibility="Auto" Height="{Binding ElementName=ThisPage,Path=ActualHeight}">
            <DataGrid.Columns>
                <DataGridTextColumn ElementStyle="{StaticResource CustomDataGridTextColumn}" Header="NO." Binding="{Binding Id}" />
                <DataGridTextColumn ElementStyle="{StaticResource CustomDataGridTextColumn}" Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn ElementStyle="{StaticResource CustomDataGridTextColumn}" Header="Title" Binding="{Binding Title}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>