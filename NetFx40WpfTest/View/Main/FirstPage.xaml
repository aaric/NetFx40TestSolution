<Page x:Class="NetFx40WpfTest.View.Main.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      DataContext="{Binding Source={StaticResource Locator}, Path=MainFirst}"
      Title="Page01">
    <Grid>
        <DataGrid ItemsSource="{Binding DataList}" Style="{StaticResource CustomDataGrid}" Margin="20"
                  HorizontalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="NO." Binding="{Binding Id}"
                                    ElementStyle="{StaticResource CustomDataGridTextColumn}" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"
                                    ElementStyle="{StaticResource CustomDataGridTextColumn}" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}"
                                    ElementStyle="{StaticResource CustomDataGridTextColumn}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>